{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build ash",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "*.cpp",
                "commands/*.cpp",
                "-o",
                "${workspaceFolder}/bin/ash"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }, 
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build test",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-D",
                "_TESTING",
                "-g",
                "-pthread",
                "../cli.cpp",
                "../command_factory.cpp",
                "../os_environment.cpp",
                "../command_parser.cpp",
                "../commands/*.cpp",
                "fakes/*.cpp",
                "util/*.cpp",
                "*.cpp",
                "-o",
                "${workspaceFolder}/bin/test"
            ],
            "options": {
                "cwd": "${workspaceFolder}/tests"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}